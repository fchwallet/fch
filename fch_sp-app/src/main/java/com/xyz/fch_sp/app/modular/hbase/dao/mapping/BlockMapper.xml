    <select id="selectByHash" resultType="com.xyz.fch_sp.app.modular.hbase.model.Block">
        select * from vns.block
        <where>
            hash = '${_parameter}'
        </where>
    </select>

    <select id="selectHashByNumber" resultType="string">
        select hash from vns.block
        <where>
            number = '${_parameter}'
        </where>
        limit 1
    </select>

    <select id="checkMiner" resultType="string">
        select hash from vns.block
        <where>
            miner = '${_parameter}'
        </where>
        limit 1
    </select>
</mapper>
